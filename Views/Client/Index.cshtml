@model IEnumerable<Stix.Models.Client>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Index</h1>

<p>
<div>
    <a class="btn btn-primary" asp-action="Create" role="button">Cargar nuevo cliente</a>
</div><br>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurnameClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailClient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurnameClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailClient)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
